FROM golang:1.22-alpine AS builder

WORKDIR /src
RUN apk add --no-cache ca-certificates git
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/ial ./services/ial/cmd/server

FROM alpine:3.20

RUN apk add --no-cache ca-certificates && update-ca-certificates
COPY --from=builder /out/ial /usr/local/bin/ial
EXPOSE 8081
CMD ["ial"]
